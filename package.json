{
  "name": "cortex",
  "version": "0.1.0",
  "description": "Personal AI assistant platform with Matrix integration and Ollama backend",
  "keywords": ["ai", "assistant", "matrix", "ollama", "opencode"],
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philbudden/cortex.git"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/",
    "extensions/",
    "skills/"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./plugin-sdk": {
      "types": "./dist/plugin-sdk/index.d.ts",
      "default": "./dist/plugin-sdk/index.js"
    },
    "./plugin-sdk/account-id": {
      "types": "./dist/plugin-sdk/account-id.d.ts",
      "default": "./dist/plugin-sdk/account-id.js"
    },
    "./cli-entry": "./openclaw.mjs"
  },
  "scripts": {
    "build": "tsdown && node --import tsx scripts/copy-hook-metadata.ts && node --import tsx scripts/write-build-info.ts",
    "check": "pnpm format:check && pnpm lint",
    "dev": "node scripts/run-node.mjs",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix && pnpm format",
    "start": "node scripts/run-node.mjs",
    "test": "vitest run --config vitest.unit.config.ts",
    "test:watch": "vitest"
  },
